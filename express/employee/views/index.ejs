<%- include('partials/header')-%>
    <div class="container mt-5">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
            <thead>
                <tr>
                    <th>name</th>
                    <th>salary</th>
                    <th>position</th>       
                    <th>Operations</th>
                </tr>
            </thead>
            <tfoot>
                <tr>
                    <th>name</th>
                    <th>salary</th>
                    <th>position</th>
                    <th>Operations</th>
                </tr>
            </tfoot>
            <tbody>
                <% employee.forEach((employ)=>{ %>
                    <tr>
                <td><%=employ.name %></td>
                <td><%=employ.salary %></td>
                <td><%=employ.position %></td>
                
                
               <td> <a href="/edit/<%=employ._id %>" class="btn btn-primary">Edit</a>
